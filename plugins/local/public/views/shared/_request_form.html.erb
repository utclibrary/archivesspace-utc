
<%= form_tag(app_prefix("fill_request"), method: 'post', :id => 'request_form', :oninput => 'javascript: return buildNote();') do %>
<%= render partial: 'shared/request_hiddens' %>
<div> <%= t('request.intro').html_safe %> </div>
<div id="request">
  <div class="form-group required ">
    <%= label_tag(:user_name, "#{t('request.user_name')} #{t('request.required')}" , :class => 'sr-only') %>
    <div class="input-group">
      <%= text_field_tag :user_name, nil, :placeholder => t('request.user_name'), :class => "form-control"%>
      <div class="input-group-addon">
        <span class="required aria-hidden"><%= t('request.required') %></span>
      </div>
    </div>
  </div>
  <div class="form-group required ">
    <%= label_tag(:user_email, "#{t('request.user_email')} #{t('request.required')}", :class => 'sr-only') %>
    <div class="input-group">
      <%= text_field_tag :user_email, nil, :type => 'email', :placeholder => t('request.user_email'), :class => 'form-control' %>
      <div class="input-group-addon">
        <span class="required aria-hidden"><%= t('request.required') %></span>
      </div>
    </div>
  </div>
  <div class="form-group required">
    <%= label_tag(:date, "#{t('request.date')} #{t('request.required')}", :class => 'sr-only') %>
    <div class="input-group">
      <%= text_field_tag :date, nil, :placeholder => t('request.date'), :class => 'form-control datepicker' , :autocomplete => 'off' %>
      <div class="input-group-addon">
        <span class="required aria-hidden"><%= t('request.required') %></span>
      </div>
    </div>
  </div>
  <div class="form-group ">
    <%= label_tag(:course, t('request.course'), :class => 'sr-only') %>
    <%= text_field_tag :course, nil, :placeholder => t('request.course'), :class => 'form-control' %>
  </div>
  <div class="form-group ">
    <%= label_tag(:additional_info, t('request.additional_info'), :class => 'sr-only') %>
    <%= text_area_tag :additional_info, nil, :rows=> "3", :cols => "25", :placeholder => t('request.additional_info'), :class => 'form-control' %>
  </div>
  <div class="form-group ">
    <%= check_box_tag(:wireless ) %>
    <%= label_tag(:wireless, t('request.wireless')) %>
  </div>
  <div class="form-group hidden">
    <%= label_tag(:note, t('request.note'), :class => 'sr-only') %>
    <%= text_area_tag :note, nil, :rows=> "3", :cols => "25", :placeholder => t('request.note'), :class => 'form-control' %>
  </div>
  <div class="form-group comment-field">
    <%= label_tag :comment %>
    <%= text_field_tag :comment, nil, tabindex: '-1', :class => 'form-control'%>
  </div>
  <button type="submit" class="btn btn-primary action-btn noscript"><%= t('request.submit') %></button>
</div>
<script language = "JavaScript" type="text/javascript"><!--
function buildNote() {
note.value = "Course: " + course.value + "\n Info: " + additional_info.value + "\n Wireless: " + wireless.checked;
}
//-->
</script>
<% end %>
